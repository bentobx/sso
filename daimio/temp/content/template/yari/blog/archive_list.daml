<div class="entry">
  <h2><a class="title" title="{title}" href="{@SITE.path}/news/{id}/{publish_date | time represent as "d-m-Y"}/{title | string url_encode}">{title}</a></h2>

  <div class="summary">

    <span class="author">Posted on <span class="date">{publish_date | time represent as "l, F j, Y"}</span> by <span class="author_username"><a href="{@SITE.path}/news/profile/{user_id}">{@author}</a></span>        
    <div class="summary">{summary | string markdown}</div>
  </div>
</div>

